"What is your name?"
$naam = Read-Host
"what is the color?"
$kleur= Read-Host
"what is the weather"
$weer= Read-Host




if($naam -eq 'Dymfna' -and $kleur -eq 'Rood' -and $weer -eq 'Mooi'){

    "Welkom " + $naam + ' hello'
    "happy to see you"

}
elseif($naam -eq 'Julia' -and $kleur -eq 'Groen' -and $weer -eq 'Mooi'){

   "Welkom " + $naam + ' hello'
   "happy to see you"

}
else{

     "Nope I do not know you"

}
